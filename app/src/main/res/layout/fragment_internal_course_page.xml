<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DE5000"
    tools:context=".InternalCoursePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackInterPage"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/icon_page_bank"
            android:layout_weight="1"
            android:layout_width="73.86dp"
            android:layout_height="24dp"
            android:src="@drawable/humo"/>

        <ImageView
            android:id="@+id/shareBanki"
            android:layout_marginEnd="20dp"
            android:layout_width="20dp"
            android:layout_height="25.48dp"
            android:src="@drawable/share"/>

    </LinearLayout>
    
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1FFFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Самый выгодный курс по переводам"
        android:textColor="#DEFFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="21dp"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#1FFFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Валюта"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:fontFamily="@font/sfuitext_light"
            />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Покупка"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:fontFamily="@font/sfuitext_light"
            />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Продажа"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:fontFamily="@font/sfuitext_light"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        android:background="#1FFFFFFF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 RUB"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />

        <TextView
            android:id="@+id/byValueRub"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1350"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />

        <TextView
            android:id="@+id/sellValueRub"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1380"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="#1FFFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 USD"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />

        <TextView
            android:id="@+id/byValueUsd"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1350"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />

        <TextView
            android:id="@+id/sellValueUsd"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1380"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="#1FFFFFFF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 EUR"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />

        <TextView
            android:id="@+id/byValueEur"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1350"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />

        <TextView
            android:id="@+id/sellValueEur"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1380"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_display"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="#1FFFFFFF"/>
    
    <Button
        android:id="@+id/btnConversion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="#1FFFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Ковертировать по этому курсу"/>

</LinearLayout>